<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iotmaster.com.internetofthings.UserInterface.SecurityActivity">

    <include
        layout="@layout/my_device_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Intruder Alerts"
        android:textColor="#000"
        android:textSize="24sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/spy1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/text"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Enable Alert"
            android:textSize="18dp"
            android:fontFamily="mono"
            android:textStyle="bold|italic"/>

        <ToggleButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:id="@+id/security_switch"
            android:background="@drawable/toggle_selector"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ring_bell"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:textStyle="italic"
        android:textSize="11dp"
        android:gravity="bottom|center"
        android:text="*This Feature is Available on Selected Devices only"/>


</LinearLayout>
