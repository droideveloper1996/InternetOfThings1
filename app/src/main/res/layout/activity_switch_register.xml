<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="iotmaster.com.internetofthings.UserInterface.SwitchRegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Enter Details"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textColorHint="#FFF"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Product Key"
        android:textColor="#f8f8f8"/>

    <EditText
        android:id="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_stye"
        android:fontFamily="sans-serif-condensed"
        android:hint="Key Here..."
        android:padding="12dp"
        android:gravity="center"
        android:textColorHint="#FFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Product Name"
        android:textColor="#f8f8f8"/>

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_stye"
        android:fontFamily="sans-serif-condensed"
        android:hint="eg. Living Room Switch"
        android:padding="12dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textColorHint="#FFF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/registerProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_shape"
            android:text="Register Product"/>

    </RelativeLayout>

</LinearLayout>
