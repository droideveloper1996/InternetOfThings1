<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/alarm_bc"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/addAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:textColor="#000080"
        android:textSize="56dp"
        android:textStyle="bold"
        tools:text="14:38"/>

    <View
        android:layout_width="match_parent"
        android:background="#C21807"
        android:layout_height="2dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:text="Repeat"
            android:textColor="#000"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/checkboxAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:buttonTint="#000"
            />

        <TextView
            android:id="@+id/mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"



            android:layout_row="1"

            android:text="Mon"
            android:textColor="#000"
            />



        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="1"
            android:buttonTint="#000"
            />

        <TextView
            android:id="@+id/tues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"


            android:text="Tue"
            android:textColor="#000"
            />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="2"


            android:buttonTint="#000"

            />

        <TextView
            android:id="@+id/wed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tues"
            android:layout_column="0"
            android:layout_row="3"


            android:text="Wed"
            android:textColor="#000"
            />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"

            android:layout_gravity="end"
            android:layout_row="3"
            android:buttonTint="#000"
            />

        <TextView
            android:id="@+id/thurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wed"
            android:layout_column="0"
            android:layout_row="4"

            android:text="Thr"
            android:textColor="#000"
            />

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="4"
            android:buttonTint="#000"
            />

        <TextView
            android:id="@+id/fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thurs"
            android:layout_column="0"
            android:layout_row="5"

            android:text="Fri"
            android:textColor="#000"
            />

        <CheckBox
            android:id="@+id/checkbox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="5"
            android:buttonTint="#000"
            />

        <TextView
            android:id="@+id/sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fri"
            android:layout_column="0"
            android:layout_row="6"

            android:text="Sat"
            android:textColor="#000"
            />

        <CheckBox
            android:id="@+id/checkbox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_gravity="end"
            android:buttonTint="#000"
            />

        <TextView
            android:id="@+id/sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sat"
            android:layout_column="0"
            android:layout_row="7"
            android:text="Sun"
            android:textColor="#000"
            />

        <CheckBox
            android:id="@+id/checkbox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="7"
            android:buttonTint="#000"
            android:gravity="center"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Action"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Switch
            android:id="@+id/switch_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="OFF"
            android:textOn="ON"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Cancel"
            android:textColor="#000"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>
